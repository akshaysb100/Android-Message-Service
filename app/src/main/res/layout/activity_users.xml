<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#009688"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.androidchatapp.Users">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:height="50sp"
        android:gravity="center"
        android:text="Enter Person Name"
        android:textColor="#DCD4D6"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/userName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:hint="Enter user name "
        android:inputType="textPersonName"
        android:textColor="#DCD4D6" />

    <TextView
        android:id="@+id/noUsersText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No users found!"
        android:visibility="gone" />

    <Button
        android:id="@+id/startService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50sp"
        android:background="#DCD4D6"
        android:text="Start Service" />

    <EditText
        android:id="@+id/show_user_Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:ems="10"
        android:hint="Enter user name"
        android:inputType="textPersonName"
        android:textColor="#DCD4D6" />

    <Button
        android:id="@+id/show_messages"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_marginTop="60sp"
        android:background="#C3BABD"
        android:text="SHOW MESSAGES" />

    <Button
        android:id="@+id/sign_out_chat"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_marginTop="60sp"
        android:background="#C3BABD"
        android:text="SIGN OUT" />


</LinearLayout>